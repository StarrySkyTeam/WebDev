<meta charset="utf-8">
<style type="text/css">
#div1 {width:40%;height:40%;padding:10px;border:1px solid #aaaaaa;
	background: url(52.png);
	background-size: cover;
	margin: 0 auto;
}
p{
	text-align: center;
	margin-top: 80px; 
	font-weight: bold;
	color: red;
}
#nextJu{
	float: right;
    background: red;
    border: transparent;
    padding: 10px 20px;
    font-size: 20px;
}
#drag1{
	width: 100px;
}
</style>
